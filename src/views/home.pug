extends base

block content

    main
        section
            div#chatHeader
                div#chatTitle
                    span
                div#userCount
                    span
                button#leaveBtn
                    i.fas.fa-sign-out-alt
            div#messagePrint
                ul
            div#messageForm
                form
                    input(required, type="text")
                    button
                        i.fas.fa-arrow-up
            
        nav
